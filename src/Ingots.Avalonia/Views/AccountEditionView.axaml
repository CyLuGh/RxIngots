<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:Ingots.Avalonia.Views"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="650"
             x:Class="Ingots.Avalonia.Views.AccountEditionView">
    <DockPanel>
        <TextBlock x:Name="TextBlockTitle"
                   Classes="h2 Accent"
                   Text="ADD ACCOUNT"
                   Margin="20 10"
                   DockPanel.Dock="Top"/>
        <UniformGrid Rows="1" Margin="10" HorizontalAlignment="Right" DockPanel.Dock="Bottom">
            <CheckBox x:Name="CheckBoxValidIban" Margin="5 0">Require valid IBAN</CheckBox>
            <Button x:Name="ButtonSave" Classes="Flat Accent" Margin="5">SAVE</Button>
            <Button x:Name="ButtonCancel" Margin="5">CANCEL</Button>
        </UniformGrid>
        <views:AccountEditingView x:Name="EditingView"
                                  MinWidth="600"/>
    </DockPanel>
</UserControl>
